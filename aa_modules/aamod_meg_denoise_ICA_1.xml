<?xml version="1.0" encoding="utf-8"?>
<aap>
    <tasklist>
        <currenttask domain='meg_session' desc='MEG ICA denoise 1: detect' modality='MEG'>
            
            <qsub>
                <timeBase>0.15</timeBase>
                <memoryBase>0.5</memoryBase>
            </qsub>
            
            <modalities>MEGMAG:MEGPLANAR</modalities>
            
            <sampling></sampling>
            
            <artifactdetection>
                <ref_chans>EOG061:EOG062:ECG063</ref_chans>
				<!-- Which topography to use in artifact topography file (must match field in that file) -->
                <ref_type>VEOG:HEOG:ECG</ref_type> 				
                <!-- Permutation based thresholding of ICs
                0  - no permutaion
                >0 - number of permutations (e.g. 1000)
                -1 - automatic definition of number of permutations (see http://www.epibiostat.ucsf.edu/biostat/sen/statgen/permutation.html#_how_many_permutations_do_we_need)
                -->
                <doPermutation>0</doPermutation>
                <TemRelZval>3</TemRelZval>
                <SpaRelZval>2</SpaRelZval>
                <!-- Thresholding (choose one or more)
                1 - corresponds to single IC with max correlation
                2 - corresponds to ICs with correlations surviving absolute p-value
                3 - corresponds to ICs with correlations surviving relative Z-score across correlations
                4 - (optional on doPermutation above) corresponds to ICs with correlations surviving boot-strapped,
                -->
                <thresholding desc='artifact thresholding'>1 2 3 4</thresholding>
            </artifactdetection>
            
            <inputstreams>
                <stream>topography</stream>
                <stream>meg</stream>
                <stream isessential='0'>meg_ica</stream>                
            </inputstreams>
            
            <outputstreams>
                <stream>meg_ica</stream>                
            </outputstreams>
            
        </currenttask>
    </tasklist>
</aap>