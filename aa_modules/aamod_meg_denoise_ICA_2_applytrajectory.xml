<?xml version="1.0" encoding="utf-8"?>
<aap>
    <tasklist>
        <currenttask domain='meg_session' desc='MEG ICA denoise 2: Apply trajectory matrix' modality='MEG'>
            
            <qsub>
                <timeBase>0.15</timeBase>
                <memoryBase>0.5</memoryBase>
            </qsub>
            
            <thresholding desc='artifact thresholding'>1 2 3 4</thresholding>
                <!-- Remove artifacts (choose one)
                all  - artifacts across all references 
                both - artifacts for each reference (spatial+temporal)
                temp - artifacts for each temporal reference
                spat - artifacts for each spatial reference
                -->
            <toremove desc='artifacts to be removed' options='both|temp|spat' ui='optionlist'>all</toremove>
            
            <inputstreams>
                <stream>meg</stream>
                <stream>meg_ica</stream>
            </inputstreams>
            
            <outputstreams>
                <stream>meg</stream>                
            </outputstreams>
            
        </currenttask>
    </tasklist>
</aap>